<%# Latest products............................................................ %>
<div class="container-fluid">
  <div class="row-fluid">
    <div class="span12">
    </div>
  </div>


    <div class="row-fluid">
      <div class="span4" style="border-radius:10px;background-color:gray" id="kulfi1">
          <pre style="background-color:#ffffff;"><b style="font-family:'tempus sans itc';color:indigo;">Latest products</b>
            <table>
              
            <% @products.last(5).reverse.each do |f| %>
           <tr><td style="padding-right:0px"><%= f.product_name %></td>
           </tr>
            <% end %>
        </table>
        <b style="padding-left:140px;"><%= link_to 'more...',reports_path() %></b>
        </pre>
      </div>

<%# About to expire products.....................................................%>

      <div class="span5" style="border-radius:10px;background-color:gray" id="kulfi2">
          <pre style="background-color:#ffffff;"><b style="font-family:'tempus sans itc';color:indigo;">About to Expire products</b>
          <table>
          
          <% @exproduct.last(5).each do |p| %>
         <tr><td align="left"><%= p.product_name %></td>
          <% if (p.expired_on-Date.today).to_i <= 0 %>
          <td style="padding-left:40px;" align="right"><%= "expired" %></td><tr/>
          <% else %>
        <td style="padding-left:40px;" align="right"><%= (p.expired_on-Date.today).to_i %>&nbsp;days</td><tr/>
          <% end %>
          <% end %>
      </table>
      <b style="padding-left:240px;"><%= link_to 'more..',reports_path() %></b>
      </pre>
      </div>

<%# Today's sale..................................................................%>

      <div class="span3" style="border-radius:10px;background-color:gray" id="kulfi3">
        <pre style="background-color:#ffffff;"><b style="font-family:'tempus sans itc';color:indigo;">Our vendors</b>
        <table>
          
        <% @vendors.each do |v| %>
        <tr><td><%= v.vendor_name %></td></tr>
        <% end %>
        </table>
      </pre>
      </div>
    </div>
</div>