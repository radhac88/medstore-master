<%# Latest products............................................................ %>
<div class="container-fluid">
  <div class="row-fluid">
    <div class="span12">
    </div>
  </div>


    <div class="row-fluid">
      <div class="span4" id="round">
          <b style="font-family:'Trebuchet MS';color:indigo;"><%= link_to 'Latest products',reports_path() %></b>
            <table>
              
            <% @products.last(5).reverse.each do |f| %>
           <tr><td style="padding-right:0px"><%= f.product_name %></td>
           </tr>
            <% end %>
        </table>
        <%#<b style="padding-left:140px;"><%= link_to 'more...',reports_path() %></b>
        
      </div>

<%# About to expire products.....................................................%>

      <div class="span4" id="round">
          <b style="font-family:'Trebuchet MS';color:indigo;"><%= link_to 'About to Expire products',reports_path() %></b>
          <table>
         <% @exproduct.last(5).each do |p| %>
         <tr><td align="left"><%= p.product_name %></td>
          <% if (p.expired_on-Date.today).to_i <= 0 %>
          <td style="padding-left:40px;" align="right"><%= "expired" %></td><tr/>
          <% else %>
        <td style="padding-left:40px;" align="right"><%= (p.expired_on-Date.today).to_i %>&nbsp;days</td><tr/>
          <% end %>
          <% end %>
      </table>
      <%#<b style="padding-left:240px;"><%= link_to 'more..',reports_path() %></b>
      
      </div>

<%# Today's sale..................................................................%>

      <div class="span4" id="round">
        <b style="font-family:'Trebuchet MS';color:indigo;"><%= link_to 'Our vendors',reports_path() %></b>
        <table>
          
        <% @vendors.each do |v| %>
        <tr><td><%= v.vendor_name %></td></tr>
        <% end %>
        <% if @vendors.count <4 %>
        <% for i in 0..(4-@vendors.count)%>
        <tr><td>&nbsp;</td></tr>
        <% end %>
        <%end%>
        </table>
      <%#<b style="padding-left:240px;"><%= link_to 'more..',reports_path() %></b>
      </div>
    </div>
</div>

