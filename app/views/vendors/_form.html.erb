<%= form_for @vendor, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :vendor_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :vendor_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :vendor_address, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :vendor_address, :class => 'text_area' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                vendors_path, :class => 'btn' %>
  </div>
<% end %>
